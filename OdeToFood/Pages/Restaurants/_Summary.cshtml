@using OdeToFood.Core
@model Restaurant 

    <div class="panel panel-default" >
        <div class="panel-heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="panel-body">
            <span>Location: @Model.Location</span>
            <span>Location: @Model.Cuisine</span>
        </div>
        <div class="panel-footer">
            <a asp-page="./Detail" asp-route-restId="@Model.Id" class="btn btn-lg">
                <i class="glyphicon glyphicon-zoom-in"></i>
            </a>
            <a asp-page="./Edit" asp-route-restId="@Model.Id" class="btn btn-lg">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a asp-page="./Delete" asp-route-restId="@Model.Id" class="btn btn-lg">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </div>


    </div>